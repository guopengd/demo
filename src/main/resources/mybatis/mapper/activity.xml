<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.ActivityDao">

    <select id="queryObject" resultType="ActivityEntity">
        select
        `id` as `id`,
        `name` as `name`,
        `description` as `description`,
        `create_date` as `createDate`
        from `sys_activity` where `id` = #{value}
    </select>

    <select id="queryList" resultType="ActivityEntity">
        select
        `id` as `id`,
        `name` as `name`,
        `description` as `description`,
        `create_date` as `createDate`
        from `sys_activity`
        <where>
            <if test="name != null and name.trim() != ''">
                AND `username` like concat('%',#{username},'%')
            </if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by `id` desc
            </otherwise>
        </choose>
        <if test="offset != null and rows != null">
            limit #{offset}, #{rows}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from `sys_activity`
        <where>
            <if test="name != null and name.trim() != ''">
                AND `username` like concat('%',#{username},'%')
            </if>
        </where>
    </select>

    <insert id="save" parameterType="ActivityEntity" useGeneratedKeys="true" keyProperty="id">
        insert into `sys_activity`
        (
        `name`,
        `description`,
        `create_date`
        )
        values
        (
        #{name},
        #{description},
        #{createDate}
        )
    </insert>


    <update id="update" parameterType="ActivityEntity">
        update `sys_activity`
        <set>
            <if test="name != null">`name` = #{name},</if>
            <if test="description != null">`description` = #{description},</if>
            <if test="createDate != null">`create_date` = #{createDate}</if>
        </set>
        where `id` = #{id}
    </update>

    <delete id="delete">
        delete from `sys_activity` where `id` = #{value}
    </delete>

</mapper>